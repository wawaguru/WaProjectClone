<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoginFormInput" parent="TextInputStandard">
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/cool_grey</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="LoginButton" parent="ButtonStandard">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/btn_login_ripple_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SignupButton" parent="ButtonStandard">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/btn_signup_ripple_background</item>
        <item name="android:textColor">@color/cool_grey</item>
    </style>

</resources>